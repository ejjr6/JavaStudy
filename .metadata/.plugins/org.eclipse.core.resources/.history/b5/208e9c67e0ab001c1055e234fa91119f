package account;

import java.util.Scanner;

import account.stmt.AccountSTMTDAOImpl;
import dao.AccountDAO;

public class BankApplication {
	
	Scanner sc = new Scanner(System.in);
	
	AccountDAO dao;
	
	BankApplication(){
		dao = new AccountSTMTDAOImpl();
//		dao = new AccountPSTMTDAOImpl();
		run();
	}
	
	void run() {
		// 1. 계좌생성
		// 2. 계좌조회
		// 3. 예금
		// 4. 출금
		// 5. 종료
		boolean isRun = true;
		
		while(isRun) {
			System.out.println("===================================");
			System.out.println("1.계좌생성 2.계좌조회 3.예금 4.출금 5.종료");
			System.out.println("===================================");
			
			int selectNo = sc.nextInt();
			if(selectNo == 1) {
				// 계좌생성
				createAccount();
			}else if(selectNo == 2) {
				// 계좌조회
				selectAccount();
			}else if(selectNo == 3) {
				// 예금
				deposit();
			}else if(selectNo == 4) {
				// 출금
				withdraw();
			}else if(selectNo == 5) {
				// 종료
				isRun = false;
				sc.close();
			}
		}
		
		
	}
	
	
	public static void main(String[] args) {
		new BankApplication();
	}
}
