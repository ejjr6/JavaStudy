
public class Ex05 {

	public static void main(String[] args) {
		
		int seats[][] = new int[10][10];
		char a = 'A';
		
		for(int i = 0; i < seats.length; i++) {
			System.out.print("["+(i+1)+"]");
		}
		System.out.println("[행]");
		
		for(int i = 0; i< seats.length; i++) {
			for(int j = 0; j< seats[i].length; j++) {
				if(seats[i][j] == 0) {
					System.out.print("[□]");
				}else {
					System.out.println("[■]");
				}
			}
			System.out.print("["+(char)(a+i)+"열]");
			System.out.println();
		}
	}

}
