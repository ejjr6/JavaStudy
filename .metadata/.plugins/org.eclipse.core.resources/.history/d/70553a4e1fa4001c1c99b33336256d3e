import java.util.Scanner;

public class Ex03 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.println("크기를 입력하세요 > ");
		int num = sc.nextInt();
		int[][] size = new int[num+1][];
		
		for(int i= 0; i<=num; i++) {
			size[i] = new int[i+1];
			for(int j = 0; j<size[i].length; j++) {
				size[i][j] = j;
				System.out.print(size[i][j]);
			}
			System.out.println();
		}

	}

}
