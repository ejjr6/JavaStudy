package GUIDE;

import java.util.Scanner;

public class BankApplication {
	
	// 계좌주 정보를 저장하는 배열
	Account[] account = new Account[100];
	
	Scanner sc = new Scanner(System.in);
	
	BankApplication(){
		this.run();
	}
	
	void run() {
		// 1. 계좌생성
		// 2. 계좌조회
		// 3. 예금
		// 4. 출금
		// 5. 종료
		boolean isRun = true;
		
		while(isRun) {
			System.out.println("===================================");
			System.out.println("1.계좌생성 2.계좌조회 3.예금 4.출금 5.종료");
			System.out.println("===================================");
			
			int selectNo = sc.nextInt();
			if(selectNo == 1) {
				// 계좌생성
				createAccount();
			}else if(selectNo == 2) {
				// 계좌조회
				selectAccount();
			}else if(selectNo == 3) {
				// 예금
				deposit();
			}else if(selectNo == 4) {
				// 출금
				withdraw();
			}else if(selectNo == 5) {
				// 종료
				isRun = false;
				sc.close();
			}
		}
		System.out.println("프로그램 종료");
	}
	
	
	
	
	
	public static void main(String[] args) {
		System.out.println("프로그램 시작");
		new BankApplication();
		System.out.println("프로그램 끝");
	}
}
