import java.util.Scanner;

public class Ex01 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int sum = 0;
		double avg = 0;
		
		for(int i=0; i<5; i++) {
			System.out.print("성적을 입력하시오: ");
			int score = sc.nextInt();
			sum += score;
		}
		avg = (double)sum / 5;
		System.out.println("평균성적 "+ avg);
		

	}

}
